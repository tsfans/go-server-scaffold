    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/server",
            "output": "${workspaceFolder}/bin/server",
            "cwd": "${workspaceFolder}/bin",
            "env": {
                "CONFIG_PATH": "./conf/server.yaml",
                "CONFIG_AUTO_RELOAD": "true",
                "CONFIG_RELOAD_INTERVAL": "5"
            }
        }
    ]
}